<?xml version="1.0" ?>
<quiz>
	<question type="pairmatching">
		<name>
			<text>Demo question d'appariement</text>
		</name>
		<questiontext format="html">
			<text>De quelle couleur était le cheval blanc d'Henry IV ?</text>
		</questiontext>
		<penalty>1</penalty>
		<defaultgrade>1</defaultgrade>
		<subquestion>
			<text>Blanc</text>
			<answer>
				<text>Blanc</text>
			</answer>
		</subquestion>
		<subquestion>
			<text>Vert</text>
			<answer>
				<text>Blanc</text>
			</answer>
		</subquestion>
		<shuffleanswers>true</shuffleanswers>
	</question>

	<question type="multichoice">
		<name>
			<text>Demo question à choix multiples</text>
		</name>
		<questiontext format="html">
			<text>Quel est la bonne réponse?</text>
		</questiontext>
		<penalty>1</penalty>
		<defaultgrade>1</defaultgrade>
		<answer fraction="100">
			<text>Ceci est la bonne réponse</text>
			<feedback>
				<text>Bravo !</text>
			</feedback>
		</answer>
		<answer fraction="0">
			<text>Une mauvaise réponse</text>
			<feedback>
				<text>Ooops!</text>
			</feedback>
		</answer>
		<answer fraction="0">
			<text>Une autre mauvaise réponse</text>
			<feedback>
				<text>Ooops!</text>
			</feedback>
		</answer>
		<shuffleanswers>1</shuffleanswers>
		<single>true</single>
	</question>
</quiz>